			color: #444
	&.selected
		.worksheet-name
			color: #444
			background: #eee
	.worksheet-name
		color: #aaa

#worksheets
	width 15%
	min-width 150px
	float left
	height 90%

#data
	width 85%
	float left
	height 90%
	overflow-scrolling: touch

.translation-item, .history-translation-item
	transform translate3d(0,0,0)
	overflow hidden
	position relative
	padding 10px
	margin 0px 3px
	cursor pointer
	transition: background-color .08s linear
	border-bottom solid 1px #eee
	.translation-buttons-section
		overflow hidden
	&.changed
		box-shadow: 0 0 3px 1px #FF0A0A
		border: 1px solid rgb(255, 108, 108)
		.translation-actions
			display block

		&:hover
			box-shadow: 0 0 3px 1px #FF0A0A
	.translation-actions
		display none
		position absolute
		top 0
		right 0
		padding 4px
	&:hover
		background-color: #F4F4F4

		.translation-history
			opacity: 1
.fa-key, .fa-refresh, .fa-home, .fa-comments
	padding-right: .5rem
	font-size: .9rem
	color: #aaa

.translation-history, .translation-key, .translation-context
	position: relative
	float: right
	font-size: .6rem
	color: #aaa
	padding-right: .5rem
	transition: all .2s linear
	opacity: 0
	font-weight: 600
	&:hover
		color: #555

.translation-key, .translation-context
	float: left
	opacity: 1
	cursor: initial
	font-weight: 400
	.fa-key
		padding-right: .2rem

	&:hover
		color: #aaa
.translation-value
	color: #444
	font-size: 1rem
.translation-original
	padding-bottom: .3rem
	color: #888
	font-size: .9rem

.translation-buttons-section 
	/*.translation-history,*/ 
	.translation-apply, 
	.translation-cancel
		width 25px
		height 25px
		float left
		padding 3px
		font-size 25px
		text-align center
		line-height 25px
		transition color 0.18s linear

.translation-apply
	&:hover
		color green

.translation-cancel
	&:hover
		color red

#translation-content
	height 100%
	transform: translate3d(0,0,0)

#popup
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display none
	&.visible
		display block
		& > ul
			opacity 1
			visibility visible
		.visible
			opacity 1
			visibility visible
			-webkit-transform scale(1)
			transform scale(1)
	& > ul
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		margin 0
		padding 0
		list-style none
		background-color rgba(0,0,0,0.3)
		z-index 1100
		opacity 0
		visibility hidden
		transition all 0.4s ease-in-out 0s
	li
		position absolute
		height 80%
		width 94%
		max-width 980px
		top 0
		bottom 0
		left 0
		right 0
		margin auto auto
		z-index 1200
		opacity 0
		visibility hidden
		transition all 0.4s ease-in-out 0s
		transform scale(0)

#history
	& > div
		background white
		width 80%
		margin auto
	#history-items
		height 80%
		border-radius 4px 4px 0px 0px
		padding-top 4px
	#close-button-container
		height 20%
		position relative
		border-radius 0px 0px 4px 4px
		#close-button
			position absolute
			right 0
			bottom 0
			height 50px
			width 15%
			margin: 2% 2%
			float right
			cursor pointer

#spinner
	& > div
		width 30%
		height 50%
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto

.loader
	font-size 20px
	margin 5em auto
	width 1em
	height 1em
	border-radius 50%
	position relative
	text-indent -9999em
	animation load4 1.3s infinite linear

