@import 'nib'

body, html
	height 100%
	width 100%
	padding 0
	margin 0

#login-form
	& > div
		background white
		width 400px
		height 200px
		position absolute
		margin auto
		top 0
		left 0
		right 0
		bottom 0
		box-shadow 0px 0px 15px 0px #000

input
	width 90%
	height 20px
	padding 6px 5px
	font-size 13px
	border 1px solid #ccc
	border-radius 4px
	box-shadow inset 0 1px 1px rgba(0,0,0,.075)
	transition border-color ease-in-out .15s,box-shadow ease-in-out .15s
	&:focus
		border-color #66afe9
		outline 0
		box-shadow inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)

#data-controls-panel
	height 10%
	#localisation-changed-only
		width 20px
	#localisation-controls
		width 66%
		float left
		padding 0 2%
	#language-controls
		width 30%
		float left

#localisation-controls
	input
		width 200px
		margin auto

#sp-key
	width 300px
	height 100px
	padding 50px

#sp-key-value
	height 30px
	font-size 11px

#sp-key-ok
	width 70px
	height 30px
	float right
	margin-top 30px
	cursor pointer

#container
	width 80%
	height 95%
	margin auto
	padding-top 2%
	display none

.worksheet
	height 50px
	width 100%
	display none
	cursor pointer
	&:hover
		background rgba(0,0,0,0.1)

#worksheets
	width 30%
	float left
	height 90%

#data
	width 70%
	float left
	height 90%

.translation-item, .history-translation-item
	position relative
	padding 10px
	margin 4px
	cursor pointer
	box-shadow 0px 0px 5px 0px #000
	.translation-buttons-section
		overflow hidden
	&.changed
		background rgba(255,0,0,0.3)
		.translation-actions
			display block
	.translation-actions
		display none
		position absolute
		top 0
		right 0
		padding 4px
	&:hover
		box-shadow 0px 0px 5px 1px #1961CC

.translation-buttons-section 
	.translation-history, 
	.translation-apply, 
	.translation-cancel
		width 25px
		height 25px
		float left
		padding 3px
		font-size 25px
		text-align center
		line-height 25px
		transition color 0.18s linear

.translation-apply
	&:hover
		color green

.translation-cancel
	&:hover
		color red

.translation-history
	&:hover
		color blue

#translation-content
	height 100%

#popup
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display none
	&.visible
		display block
		& > ul
			opacity 1
			visibility visible
		.visible
			opacity 1
			visibility visible
			-webkit-transform scale(1)
			transform scale(1)
	& > ul
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		margin 0
		padding 0
		list-style none
		background-color rgba(0,0,0,0.3)
		z-index 1100
		opacity 0
		visibility hidden
		transition all 0.4s ease-in-out 0s
	li
		position absolute
		height 80%
		width 94%
		max-width 980px
		top 0
		bottom 0
		left 0
		right 0
		margin auto auto
		z-index 1200
		opacity 0
		visibility hidden
		transition all 0.4s ease-in-out 0s
		transform scale(0)

#history
	& > div
		background white
		width 80%
		margin auto
	#history-items
		height 80%
		border-radius 4px 4px 0px 0px
		padding-top 4px
	#close-button-container
		height 20%
		position relative
		border-radius 0px 0px 4px 4px
		#close-button
			position absolute
			right 0
			bottom 0
			height 50px
			width 15%
			margin: 2% 2%
			float right
			cursor pointer

#spinner
	& > div
		width 30%
		height 50%
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto

.loader
	font-size 20px
	margin 5em auto
	width 1em
	height 1em
	border-radius 50%
	position relative
	text-indent -9999em
	animation load4 1.3s infinite linear

@keyframes load4 {
	0%,
	100% {
		box-shadow: 0em -3em 0em 0.2em #ffffff, 2em -2em 0 0em #ffffff, 3em 0em 0 -0.5em #ffffff, 2em 2em 0 -0.5em #ffffff, 0em 3em 0 -0.5em #ffffff, -2em 2em 0 -0.5em #ffffff, -3em 0em 0 -0.5em #ffffff, -2em -2em 0 0em #ffffff;
	}
	12.5% {
		box-shadow: 0em -3em 0em 0em #ffffff, 2em -2em 0 0.2em #ffffff, 3em 0em 0 0em #ffffff, 2em 2em 0 -0.5em #ffffff, 0em 3em 0 -0.5em #ffffff, -2em 2em 0 -0.5em #ffffff, -3em 0em 0 -0.5em #ffffff, -2em -2em 0 -0.5em #ffffff;
	}
	25% {
		box-shadow: 0em -3em 0em -0.5em #ffffff, 2em -2em 0 0em #ffffff, 3em 0em 0 0.2em #ffffff, 2em 2em 0 0em #ffffff, 0em 3em 0 -0.5em #ffffff, -2em 2em 0 -0.5em #ffffff, -3em 0em 0 -0.5em #ffffff, -2em -2em 0 -0.5em #ffffff;
	}
	37.5% {
		box-shadow: 0em -3em 0em -0.5em #ffffff, 2em -2em 0 -0.5em #ffffff, 3em 0em 0 0em #ffffff, 2em 2em 0 0.2em #ffffff, 0em 3em 0 0em #ffffff, -2em 2em 0 -0.5em #ffffff, -3em 0em 0 -0.5em #ffffff, -2em -2em 0 -0.5em #ffffff;
	}
	50% {
		box-shadow: 0em -3em 0em -0.5em #ffffff, 2em -2em 0 -0.5em #ffffff, 3em 0em 0 -0.5em #ffffff, 2em 2em 0 0em #ffffff, 0em 3em 0 0.2em #ffffff, -2em 2em 0 0em #ffffff, -3em 0em 0 -0.5em #ffffff, -2em -2em 0 -0.5em #ffffff;
	}
	62.5% {
		box-shadow: 0em -3em 0em -0.5em #ffffff, 2em -2em 0 -0.5em #ffffff, 3em 0em 0 -0.5em #ffffff, 2em 2em 0 -0.5em #ffffff, 0em 3em 0 0em #ffffff, -2em 2em 0 0.2em #ffffff, -3em 0em 0 0em #ffffff, -2em -2em 0 -0.5em #ffffff;
	}
	75% {
		box-shadow: 0em -3em 0em -0.5em #ffffff, 2em -2em 0 -0.5em #ffffff, 3em 0em 0 -0.5em #ffffff, 2em 2em 0 -0.5em #ffffff, 0em 3em 0 -0.5em #ffffff, -2em 2em 0 0em #ffffff, -3em 0em 0 0.2em #ffffff, -2em -2em 0 0em #ffffff;
	}
	87.5% {
		box-shadow: 0em -3em 0em 0em #ffffff, 2em -2em 0 -0.5em #ffffff, 3em 0em 0 -0.5em #ffffff, 2em 2em 0 -0.5em #ffffff, 0em 3em 0 -0.5em #ffffff, -2em 2em 0 0em #ffffff, -3em 0em 0 0em #ffffff, -2em -2em 0 0.2em #ffffff;
	}
}